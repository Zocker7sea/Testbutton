<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Eintraegemenu">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="409dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageButton10"
            android:layout_width="83dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/burger"
            tools:ignore="UnknownIdInLayout,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:text="Finanz App"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_baseline_search_24" />

        <ImageButton
            android:id="@+id/btnmenu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            app:srcCompat="@drawable/ic_baseline_more_vert_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="680dp"
        android:layout_marginTop="5dp"
        android:background="#BAB7B7"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Button
            android:id="@+id/btnREE"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="#5D856767"
            android:backgroundTint="#B84545"
            android:backgroundTintMode="screen"
            android:text="Regelmäßige Einnahmen Eintragen"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:theme="@style/Theme.AppCompat" />

        <Button
            android:id="@+id/btnRAE"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"

            android:layout_marginRight="5dp"
            android:background="#5D856767"
            android:backgroundTint="#A38C8C"
            android:text="Regelmäßige Ausgaben Eintragen"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:theme="@style/Theme.AppCompat" />

        <Button
            android:id="@+id/btnEE"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="#5D856767"

            android:text="Einnahmen Eintragen"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:theme="@style/Theme.AppCompat" />

        <Button
            android:id="@+id/btnAE"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"

            android:background="#5D856767"
            android:text="Ausgaben Eintragen"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:theme="@style/Theme.AppCompat" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>